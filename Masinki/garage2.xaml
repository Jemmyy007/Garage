        <Label Content="-Автоматические ворота" HorizontalAlignment="Left" Margin="144,243,0,0" VerticalAlignment="Top" Foreground="White" FontSize="16" FontWeight="Bold" Height="29" Width="216"/>
        <Label x:Name="lblPrice2" Content="Label" HorizontalAlignment="Left" Margin="197,326,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="22" Foreground="#FF00FF31" Width="202" Height="50" Grid.ColumnSpan="2"/>
        <Rectangle Fill="#FFD07777" HorizontalAlignment="Left" Height="32" Margin="20,20,0,0" Stroke="#FFD07777" VerticalAlignment="Top" Width="38" RenderTransformOrigin="0.842,1.078"/>
        <Button Content="" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Height="32" Width="38" FontWeight="Bold" Foreground="White" FontSize="14" IsCancel="True" RenderTransformOrigin="0.462,0.157" Click="Button_Click">
            <Button.Background>
                <ImageBrush ImageSource="/icons8-назад-48.png"/>
            </Button.Background>
        </Button>
        <Image HorizontalAlignment="Left" Height="59" Margin="274,0,0,0" VerticalAlignment="Top" Width="126" Grid.Column="1"/>
        <Image Margin="289,0,0,384" Source="/Image2.png" Stretch="Fill" Grid.Column="1"/>
        <Button Content="Карта" HorizontalAlignment="Left" Margin="236,357,0,0" VerticalAlignment="Top" Height="35" Width="76" Background="#FFD07777" FontSize="18" Foreground="White" Click="Button_Click_1" FontWeight="Bold" Grid.Column="1"/>
        <Button Grid.Column="1" Content="Чертеж" HorizontalAlignment="Left" Margin="81,357,0,0" VerticalAlignment="Top" Height="34" Width="76" Click="Button_Click_2" Foreground="White" Background="#FFD07777" FontWeight="Bold" FontSize="16"/>
        <Button Content="Оформить" HorizontalAlignment="Left" Margin="136,372,0,0" VerticalAlignment="Top" Height="32" Width="105" Background="#FFD07777" Foreground="White" FontWeight="Bold" FontSize="18" Click="Button_Click_3"/>
        <Label x:Name="lblStatus2" Content="Label" HorizontalAlignment="Left" Margin="136,277,0,0" VerticalAlignment="Top" Height="44" Width="151" Foreground="#FFFF3400" FontWeight="Bold" FontSize="20"/>

    </Grid>
</Window>
