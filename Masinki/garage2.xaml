        <Label Content="Опции:" HorizontalAlignment="Left" Margin="46,136,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="22" Foreground="White" Height="37" Width="92"/>
        <Label Content="Стоимость:" HorizontalAlignment="Left" Margin="54,326,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold" Foreground="White" RenderTransformOrigin="0.577,0.666" Height="37" Width="138"/>
        <Label Content="20 кв. м. (4х5)" HorizontalAlignment="Left" Margin="174,77,0,0" VerticalAlignment="Top" Width="134" FontSize="16" FontWeight="Bold" Foreground="White" Height="29"/>
        <Label Content="2" HorizontalAlignment="Left" Margin="246,109,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Foreground="White" Height="32" Width="21"/>
        <Label Content="-Освещение" HorizontalAlignment="Left" Margin="144,142,0,0" VerticalAlignment="Top" FontSize="16" Width="124" FontWeight="Bold" Foreground="White" Height="33"/>
        <Label Content="-Отопление" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Foreground="White" Height="29" Width="108" Margin="0,175,0,0"/>
